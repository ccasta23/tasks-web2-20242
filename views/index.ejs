<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Tasks</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        
        <div class="container">
            <div class="row">
                <div class="col-12 alert alert-success">
                    <h1 class="text-center">Tasks</h1>
                </div>
                <div class="col-12">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Done</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% tasks.forEach( task => { %>
                                <tr>
                                    <th scope="row"><%= task.id %></th>
                                    <td><%= task.title %></td>
                                    <td><%= task.done ? 'âœ…' : 'ðŸš«' %></td>
                                    <td>
                                        <button
                                            type="button"
                                            class="btn btn-warning"
                                            data-bs-toggle="modal"
                                            data-bs-target="#taskModal"
                                            onclick="openTaskModal(<%= task.id %>, '<%= task.title %>', <%= task.done %>)"
                                            >Edit</button>
                                        <form 
                                            action="/tasks/destroy/<%= task.id %>" 
                                            method="post" 
                                            onsubmit="return confirm('Are you sure you want to delete this task?')"
                                            class="d-inline">
                                            <button 
                                            type="submit" 
                                            class="btn btn-danger"
                                            >
                                                Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <div class="col-12 col-md-3">
                    <!-- Button trigger modal -->
                    <button 
                    type="button" 
                    class="btn btn-primary" 
                    data-bs-toggle="modal" 
                    data-bs-target="#taskModal"
                    onclick="openTaskModal()"
                    >
                        + Add Task
                    </button>
                </div>
                
                <!-- Modal -->
                <div class="modal fade" id="taskModal" tabindex="-1" aria-labelledby="taskModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h1 class="modal-title fs-5" id="taskModalLabel">Add/Edit Task</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form action="/tasks" method="post" id="taskForm">
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="taskTitle" class="form-label">Task Title</label>
                                    <input name="title" type="text" class="form-control" id="taskTitle" aria-describedby="taskTitleHelp">
                                    <div id="taskTitleHelp" class="form-text">Â¡Add an excellent Task!</div>
                                </div>
                                <div class="mb-3 form-check">
                                    <input name="done" type="checkbox" class="form-check-input" id="taskIsDone">
                                    <label class="form-check-label" for="taskIsDone">Â¿Done?</label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </form>
                    </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
            function openTaskModal(id = null, title = '', done = false) {
                if (id) {
                    document.getElementById('taskForm').action = `/tasks/edit/${id}`;
                } else {
                    document.getElementById('taskForm').action = '/tasks';
                }
                document.getElementById('taskTitle').value = title;
                document.getElementById('taskIsDone').checked = done;
            }
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>